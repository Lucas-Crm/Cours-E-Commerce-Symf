{% extends 'base.html.twig' %}

{% block title %}
    Admin User
    {{ parent() }}
{% endblock %}

{% block body %}

    <section class="container">
        <h1> Admin users </h1>
        <div class="d-flex flex-wrap-wrap">
            {% for user in users %}
                <hr>
                <div class="card">
                    <p>{{ user.firstName }}</p>
                    <p>{{ user.email }}</p>
                    <div class="d-flex">
                    <a class="btn btn-secondary " href="{{ path('admin.user.update', {id: user.id}) }}" >Update</a>
                    {{ include('backend/user/_delete.html.twig') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
