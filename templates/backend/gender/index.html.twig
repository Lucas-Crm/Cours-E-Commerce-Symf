{% extends 'base.html.twig' %}

{% block title %}
    Genders
    {{ parent() }}
{% endblock %}

{% block body %}
<section>
    <h1>Admin des genders</h1>
    <div>
        <a href="{{ path('admin.gender.create') }}">Create new gender</a>
    </div>
    <div>
        {% for gender in genders %}
            <div>
                <h2>{{ gender.name }}</h2>

                <p>{{ gender.enable ? 'Actif' : 'Pas actif' }}</p>

                <a href="{{ path('admin.gender.update', {id: gender.id}) }}">Update</a>
                {{ include('backend/gender/_delete.html.twig') }}
            </div>

            <hr>
        {% endfor %}
    </div>
</section>

{% endblock %}
