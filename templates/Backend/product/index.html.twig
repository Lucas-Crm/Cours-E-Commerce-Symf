{% extends 'base.html.twig' %}

{% block title %}
    Admin des Produits
    {{ parent() }}
{% endblock %}

{% block body %}

    <section class="container">
        <div>
            <h1>Admin des Produits</h1>
            <a class="btn btn-secondary" href="{{ path('admin.product.create') }}">Create a new product</a>
        </div>
        <div class="d-flex">
            {% for product in products  %}
                <div class="card">
                    <h2>{{ product.name }}</h2>
                    <p>{{ product.slug }}</p>
                    <p>{{ product.delivery.name }}</p>
                    <p>{{ product.marque.name }}</p>
                    <p>{{ product.model.name }}</p>
                    <p>{{ product.gender.name }}</p>
                    <p>{{ product.enable ? 'Actif' : 'Pas actif' }}</p>
                    <div class="d-flex">
                        <a class="btn btn-secondary" href="{{ path('admin.product.update', {id: product.id}) }}">Update</a>
                        {{ include('Backend/product/_delete.html.twig') }}
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

{% endblock %}
