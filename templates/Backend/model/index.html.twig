{% extends 'base.html.twig' %}

{% block title %}
    Models Admin
    {{ parent() }}
{% endblock %}

{% block body %}

    <section class="container">
        <h1>Admin des Models</h1>
        <a class="btn btn-secondary" href="{{ path('admin.model.create') }}">Create a new model</a>
<div class="d-flex">
        {% for model in models %}
            <div class="card">
                <h2>{{ model.name }}</h2>
                <p>{{ model.enable ? 'Actif' : 'Pas Actif' }}</p>
                <p>{{ model.slug }}</p>
                <p>{{ model.createdAt|format_datetime('full','none') }}</p>
                <div class="d-flex">
                    <a class="btn btn-secondary" href="{{ path('admin.model.update', {id: model.id}) }}">Update</a>
                    {{ include('Backend/model/_delete.html.twig') }}
                </div>
            </div>
        {% endfor %}
</div>
    </section>

{% endblock %}
