{% extends 'Security/security/adminBase.html.twig' %}

{% block title %}
    Update Model
    {{ parent() }}
{% endblock %}

{% block body %}

    <section class="container">
        <div>
            <h1>Update Model</h1>
        </div>
        <div class="form-group">
            {{ form_start(form) }}

            <input class="btn btn-secondary" type="submit" value="Update">

            {{ form_end(form) }}
        </div>
        <h2>Produit liee a cet model :</h2>
        {% for product in products %}
            <a class="btn btn-primary" href="{{ path('admin.product.update', {id: product.id}) }}">{{ product.name }}</a>
            <hr>
        {% endfor %}

    </section>

{% endblock %}
