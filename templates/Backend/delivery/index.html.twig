{% extends 'base.html.twig' %}

{% block title %}
    Admin des Delivery
    {{ parent() }}
{% endblock %}

{% block body %}

    <section class="container">
        <div>
            <h1>Admin des Delivery</h1>
            <a class="btn btn-secondary" href="#">Create new delivery</a>
        </div>
        <div class="d-flex">
            {% for delivery in deliverys %}
                <div class="card">
                    <h2>{{ delivery.name }}</h2>
                    <p>{{ delivery.description }}</p>
                    <p>{{ delivery.price }}</p>
                    <p>{{ delivery.enable ? 'Actif' : 'Pas Actif' }}</p>
                    <div class="d-flex">
                        <a class="btn btn-secondary" href="{{ path('admin.delivery.update', {id: delivery.id}) }}">Update</a>
                        <a href="#">Delete</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
