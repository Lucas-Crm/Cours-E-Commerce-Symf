{% extends 'Security/security/adminBase.html.twig' %}

{% block title %}Hello MarqueController!{% endblock %}

{% block body %}
<section class="container">
    <div>
        <h1>Admin des marques</h1>
        <a class="btn btn-secondary" href="{{ path('admin.marque.create') }}">Create new marque</a>
    </div>
    <div class="d-flex">
        {% for marque in marques  %}
            <div class="card">
                <h2>{{ marque.name }}</h2>
                <p>{{ marque.slug }}</p>
                <p>{{ marque.description }}</p>
                <p>{{ marque.enable ? 'Actif' : 'Pas Actif' }}</p>
                <div class="d-flex">
                    <a class="btn btn-secondary" href="{{ path('admin.marque.update', {id: marque.id}) }}">Update</a>
                    {{ include('Backend/marque/_delete.html.twig') }}
                </div>

            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}
